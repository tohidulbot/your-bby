module.exports.config = {
  name: "${prefix}",
  version: "1.0.0",
  hasPermssion: 0,
  credits: "TOHIDUL BOT HUB ",
  description: "🔥 বটের প্রিফিক্স দেখাও এবং এপিক গ্রিটিং পাও! 🚀",
  commandCategory: "system",
  usages: "",
  cooldowns: 3
};

module.exports.handleEvent = async function ({ api, event, getText }) {
  const { threadID, messageID, body } = event;
  const prefix = global.config.PREFIX || "/"; // Default prefix or from config

  if (!body || typeof body === "undefined" || body !== prefix) return;

  const message = `🌟 **Assalamualaikum!** 🌟\n\n` +
                 `👋 **Kemon asen?** Hope you're rocking it! 😎\n` +
                 `🔧 **Bot er Prefix**: ${prefix} (Use it to command me!)\n` +
                 `🎨 **Made by**: ✨ ŤØĤƗĐɄŁ ✨\n\n` +
                 `💥 Stay epic, keep vibing! 🚀`;

  return api.sendMessage(message, threadID, messageID);
};

module.exports.run = async function ({ api, event }) {
  // This command is triggered by the prefix itself, so run is not needed
  // But kept for compatibility with your bot framework
  const { threadID, messageID } = event;
  const prefix = global.config.PREFIX || "/";

  const message = `🌟 **Assalamualaikum!** 🌟\n\n` +
                 `👋 **Kemon asen?** Hope you're rocking it! 😎\n` +
                 `🔧 **Bot er Prefix**: ${prefix} (Use it to command me!)\n` +
                 `🎨 **Made by**: ✨ ŤØĤƗĐɄŁ ✨\n\n` +
                 `💥 Stay epic, keep vibing! 🚀`;

  return api.sendMessage(message, threadID, messageID);
};
